# A 使用者權限
user A_user
topic read  v1/id1/ctrl/#
topic write v1/id1/ctrl/end
topic write v1/id1/cmd/point
topic read  v1/id1/telemetry/result
topic read  v1/id1/config/setting
topic write v1/id1/config/setting
topic write v1/id1/status

# B 使用者權限
user B_user
topic write v1/id1/ctrl/start
topic read  v1/id1/ctrl/end
topic read  v1/id1/cmd/point
topic write v1/id1/telemetry/result
topic read  v1/id1/config/setting
topic write v1/id1/config/setting
topic write v1/id1/status

# 通用權限（可選）
pattern read  v1/%c/+/+
pattern write v1/%c/+/+
